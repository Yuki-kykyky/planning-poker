{
  "functions": {
    "app/api/sse/route.ts": {
      "maxDuration": 60
    },
    "app/api/session/route.ts": {
      "maxDuration": 30
    },
    "app/api/stats/route.ts": {
      "maxDuration": 30
    },
    "app/api/debug/connection/route.ts": {
      "maxDuration": 30
    },
    "app/api/debug/stability/route.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/sse",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        },
        {
          "key": "Connection",
          "value": "keep-alive"
        },
        {
          "key": "Content-Type",
          "value": "text/event-stream"
        }
      ]
    }
  ]
} 